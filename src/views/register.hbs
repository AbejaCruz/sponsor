<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
  </head>
  <body>

    <div>
      <div>
        <div>
          Register Form
        </div>
        <div>
          <form action="/auth/register" method="POST">
            <div>
              <label for="name">First Name</label>
              <input
                type="text"
                class="form-control"
                id="first_name"
                name="first_name"
              />
            </div>
            <div>
              <label for="name">Last Name</label>
              <input
                type="text"
                class="form-control"
                id="last_name"
                name="last_name"
              />
            </div>

            <div>
              <label for="email">Email Address</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
              />
            </div>

            <div>
              <label for="password">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
              />
            </div>

            <div>
              <label for="passwordConfirm">Confirm Password</label>
              <input
                type="password"
                class="form-control"
                id="passwordConfirm"
                name="passwordConfirm"
              />
            </div>

            <button type="submit">Register User</button>
          </form>
        </div>
      </div>

      {{#if message}}
        <h4>{{message}}</h4>
      {{/if}}
    </div>

  </body>
</html>